<%# [user.name user.timeZone timeZones[] ] _%>
    <nav id="profile">
        <form action="" hx-post="<%= process.env.APP_PATH %>/logout" hx-target="body">
            <button id="profileLogoutButton" class="logout">logout</button>
        </form>
        <span id="profileUsername">
            <%= user.name %>
        </span>
        <span id="timeZoneDisplay">
            <button title="Swith Timezone" class="startStop" onclick="editTimezone()">‚úèÔ∏è</button>
            Timezone: <%= user.timeZone _%>
        </span>
        <span id="timeZoneEdit" style="display: none;">
            <button title="Cancel" onclick="editTimezone(false)">‚ùå</button>
            <button title="Done" class="startStop"
                onclick="htmx.trigger('#timeZoneSelectForm', 'trigger');editTimezone(false)">üíæ</button>
            <form onsubmit="return false;" hx-patch="<%- process.env.APP_PATH _%>/auth/user" hx-target="body"
                id="timeZoneSelectForm" hx-trigger="trigger" hx-swap="outerHTML">
                <label for="timeZoneSelector">My Timezone: </label>
                <input id="timeZoneSelector" list="timeZoneList" name="timeZone" placeholder="<%= user.timeZone %>">
                <datalist id="timeZoneList" style="display: none;">
                    <% timeZones.forEach(zone=> { _%>
                        <option value="<%=zone%>">
                            <%=zone%>
                        </option>
                        <% }) _%>
                </datalist>
            </form>
        </span>
    </nav>