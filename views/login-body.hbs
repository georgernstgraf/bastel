<body>
    <div class="container mt-3">
        <h1>Watchtracker</h1>
        {{#if errors}}
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
        {{/if}}
        <form class="my-2"
              hx-post="{{appPath}}/login"
              hx-target="body">
            <input type="text"
                   name="user"
                   id="username"
                   placeholder="Username">
            <input type="password"
                   name="passwd"
                   id="password"
                   placeholder="Password">
            <input type="submit"
                   value="Login">
        </form>
        {{> footer}}
    </div>
</body>
<!-- /login-body.hbs -->