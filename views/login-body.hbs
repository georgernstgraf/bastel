{{> bodyOpen}}
<h1>Watchtracker</h1>
{{#if errors}}
    {{#each errors}}
        <p>{{this}}</p>
    {{/each}}
{{/if}}
<form hx-post="{{process.env.APP_PATH}}/login" hx-target="body">
    <input type="text" name="user" id="username" placeholder="Username">
    <input type="password" name="passwd" id="password" placeholder="Password">
    <input type="submit" value="Login">
</form>
{{> footer}}
</body>