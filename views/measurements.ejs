<table>
    <caption colspan="6">Aktuell: <%= watch.name %>
        <% if (watch.comment) { %>
        (<%= watch.comment %>)
        <% } %>
    </caption>
    <thead>
        <tr>
            <th scope="rowgroup" style="width: 5%;"><button hx-post="<%= process.env.APP_PATH %>/measure/<%= watch.id %>" hx-target="closest table">＋</button></th>
            <th scope="col" style="width: 30%;">Messzeitpunkt</th>
            <th scope="col" style="width: 10%;">Abweichung</th>
            <th scope="col" style="width: 10%;">Typ</th>
            <th scope="col" style="width: 15em; text-align: center;">Drift</th>
        </tr>
    </thead>
    <tbody>
        <% measurements.forEach(e=> { %>
        <tr data-id="<%= e.id %>">
            <th scope="row"><button hx-delete="<%= process.env.APP_PATH %>/measure/<%= e.id %>" hx-target="closest table">－</button></th>
            <td><input type="datetime-local" value="<%= e.createdAt.toISOString().substring(0, 16) %>"></td>
            <td><input type="number" value="<%= e.value %>">
            </td>
            <td>
                <% if (e.isStart) { %>
                S
                <% } else { %>
                M
                <% } %>
            </td>
            <td class="sekPerDay">
                <%= e.drift %>
            </td>
            <td>
                <%= e.comment ? e.comment : "comment" %>
            </td>
        </tr>
        <% }) %>
    </tbody>
    <tfoot>
        <tr>
            <td class="sekPerDay" colspan="7" style="text-align: center; color: rgb(211, 54, 130); font-size: larger; font-weight: bold; --darkreader-inline-color: #c67586;" data-darkreader-inline-color="">(Dauer: 1.9 Tage, Drift: 13 Sek =&gt; 6.8 s/d schnell)</td>
        </tr>
    </tfoot>
</table>