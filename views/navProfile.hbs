<nav id='profile'>
    <form action='' hx-post='{{appPath}}/logout' hx-target='body'>
        <button id='profileLogoutButton' class='logout'>logout</button>
    </form>
    <span id='profileUsername'>
        {{user.name}}
    </span>
    <span id='timeZoneDisplay'>
        <button
            title='Switch Timezone'
            class='startStop'
            onclick='editTimezone()'
        >‚úèÔ∏è</button>
        Timezone:
        {{user.timeZone}}
    </span>
    <span id='timeZoneEdit' style='display: none;'>
        <button title='Cancel' onclick='editTimezone(false)'>‚ùå</button>
        <button
            title='Done'
            class='startStop'
            onclick="htmx.trigger('#timeZoneSelectForm', 'trigger');editTimezone(false)"
        >üíæ</button>
        <form
            onsubmit='return false;'
            hx-patch='{{appPath}}/auth/user'
            hx-target='body'
            id='timeZoneSelectForm'
            hx-trigger='trigger'
            hx-swap='outerHTML'
        >
            <label for='timeZoneSelector'>My Timezone: </label>
            <input
                id='timeZoneSelector'
                list='timeZoneList'
                name='timeZone'
                placeholder='{{user.timeZone}}'
            />
            <datalist id='timeZoneList' style='display: none;'>
                {{#each timeZones}}
                    <option value='{{this}}'>
                        {{this}}
                    </option>
                {{/each}}
            </datalist>
        </form>
    </span>
</nav>